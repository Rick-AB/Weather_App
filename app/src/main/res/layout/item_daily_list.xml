<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgroud_colour_gradient">

            <TextView
                android:id="@+id/item_daily_day_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="Today"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:background="@android:color/white"
                app:layout_constraintBottom_toTopOf="@id/item_daily_max_TV"
                app:layout_constraintEnd_toEndOf="@id/item_daily_day_TV"
                app:layout_constraintStart_toStartOf="@id/item_daily_day_TV"
                app:layout_constraintTop_toBottomOf="@id/item_daily_day_TV" />

            <TextView
                android:id="@+id/item_daily_max_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="204dp"
                android:text="28"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/item_daily_day_TV"
                app:layout_constraintStart_toStartOf="@+id/item_daily_day_TV"
                app:layout_constraintTop_toBottomOf="@+id/item_daily_day_TV" />

            <View
                android:id="@+id/view4"
                android:layout_width="3dp"
                android:layout_height="0dp"
                android:background="@android:color/white"
                app:layout_constraintBottom_toTopOf="@id/item_daily_min_TV"
                app:layout_constraintEnd_toEndOf="@id/item_daily_max_TV"
                app:layout_constraintStart_toStartOf="@id/item_daily_max_TV"
                app:layout_constraintTop_toBottomOf="@id/item_daily_max_TV" />

            <TextView
                android:id="@+id/item_daily_min_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:text="24"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/item_daily_max_TV"
                app:layout_constraintStart_toStartOf="@+id/item_daily_max_TV"
                app:layout_constraintTop_toBottomOf="@+id/item_daily_max_TV" />

            <ImageView
                android:id="@+id/item_daily_max_icon_img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/view3"
                app:layout_constraintEnd_toEndOf="@+id/item_daily_day_TV"
                app:layout_constraintStart_toStartOf="@+id/item_daily_day_TV"
                app:layout_constraintTop_toBottomOf="@+id/item_daily_day_TV"
                app:srcCompat="@drawable/drop" />

            <TextView
                android:id="@+id/item_daily_humidity_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="37"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@+id/item_daily_day_TV"
                app:layout_constraintStart_toStartOf="@+id/item_daily_day_TV"
                app:layout_constraintTop_toBottomOf="@+id/view3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>